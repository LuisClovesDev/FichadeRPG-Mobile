<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Camada de borda preta -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="@color/dourado"
                android:width="8dp" />
            <corners android:radius="20sp" />
        </shape>
    </item>

    <!-- Camada de gradiente (sobreposta Ã  borda preta) -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <gradient
                android:startColor="@color/roxo"
                android:endColor="@color/lilais"
                android:angle="90" />
            <stroke
                android:color="@android:color/transparent"
                android:width="4dp" />
            <corners android:radius="20sp" />
        </shape>
    </item>

</layer-list>
