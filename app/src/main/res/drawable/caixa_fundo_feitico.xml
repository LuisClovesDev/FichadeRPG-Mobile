<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Nova borda preta que contorna o objeto (borda externa) -->
    <item>
        <shape>
            <corners android:radius="6dp" /> <!-- Adiciona o arredondamento nas pontas -->
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="#000000"
                android:width="8dp" />
        </shape>
    </item>

    <!-- Contorno principal com gradiente -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape>
            <gradient
                android:startColor="#070709"
                android:endColor="#1B1871"
                android:angle="45"/>
            <stroke
                android:color="@android:color/transparent"
                android:width="4dp" />
        </shape>
    </item>

    <!-- Contorno adicional em Preto (ajuste o width conforme necessÃ¡rio) -->
    <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="@color/white"
                android:width="4dp" />
        </shape>


    </item>

</layer-list>
