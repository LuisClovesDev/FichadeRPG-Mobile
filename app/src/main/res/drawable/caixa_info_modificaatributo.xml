<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Contorno principal em MarromSuave -->
    <item>
        <shape>
            <solid android:color="@color/fundo" />
            <stroke
                android:width="4dp"
                android:color="@color/black" />
        </shape>
    </item>

    <!-- Imagem drawable sem contorno -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <bitmap
            android:gravity="center"
            android:src="@drawable/oito" />

        <size
            android:width="100dp"
            android:height="100dp" />
    </item>

</layer-list>
