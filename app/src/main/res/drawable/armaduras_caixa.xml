<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Camada de borda preta superior -->
    <item android:left="0dp" android:right="6dp" android:top="0dp" android:bottom="4dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="@color/gray"
            android:width="4dp" />
            <corners android:radius="25sp" />
        </shape>
    </item>

    <!-- Camada de borda preta inferior -->
    <item android:left="6dp" android:right="0dp" android:top="4dp" android:bottom="0dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="@color/AzulClaro"
            android:width="4dp" />
            <corners android:radius="25sp" />
        </shape>
    </item>

    <!-- Camada de cor branca (sobreposta Ã s bordas) -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape>
            <solid android:color="@color/white" />
            <stroke
                android:color="@android:color/transparent"
                android:width="8dp" />
            <corners android:radius="20sp" />
        </shape>
    </item>

</layer-list>
