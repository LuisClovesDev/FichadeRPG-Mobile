<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_bacgraund">

    <ImageView
        android:id="@+id/imagem"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="14dp"
        android:src="@drawable/pro"
        />

    <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imagem"
        app:layout_constraintLeft_toRightOf="@id/imagem"
        android:text="NOME DO FEITIÇO:"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/cust_de_mana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nome"
        app:layout_constraintLeft_toLeftOf="@id/nome"
        android:text="CUSTO DE MANA:"
        android:textColor="@color/AzulClaro"
        />
    <TextView
        android:id="@+id/tempo_de_carga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cust_de_mana"
        app:layout_constraintLeft_toLeftOf="@id/cust_de_mana"
        android:text="TEMPO DE CARGA:"
        android:textColor="@color/laranjaescuro"
        />
    <TextView
        android:id="@+id/ResumoDescritivo"
        android:layout_width="280dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/tempo_de_carga"
        app:layout_constraintLeft_toLeftOf="@id/tempo_de_carga"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:text="Resumo da habilidade escrito em no minimo 3 linhas  e que pode dar um resumo rapido para que o jogador veja o que seu feitiço faz"
        android:textColor="@color/black"
        />
</androidx.constraintlayout.widget.ConstraintLayout>